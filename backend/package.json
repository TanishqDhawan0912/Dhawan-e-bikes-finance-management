{
  "name": "finance-management-backend",
  "version": "1.0.0",
  "description": "Backend for Finance Management System",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "start:all": "concurrently \"npm run start\" \"cd ../frontend && npm run dev\"",
    "dev": "nodemon server.js",
    "dev:all": "concurrently \"npm run dev\" \"cd ../frontend && npm run dev\"",
    "install:frontend": "cd ../frontend && npm install",
    "install:all": "npm install && npm run install:frontend",
    "migrate:purchase-dates": "node scripts/runMigration.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.0.3",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "nodemon": "^2.0.22",
    "concurrently": "^8.2.2"
  }
}
